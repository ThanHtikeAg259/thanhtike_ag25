@model POS_OJT.Models.Shop

@{ ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml"; }

<style>
    .form-group span {
        color: red;
    }

    .form {
        margin: 50px 10% 0 10%;
        background: white;
        box-shadow: 0px 3px 8px #dee2e6;
    }

    .form-row{
        padding-bottom: 10px;
    }

    .mt {
        padding-top: 5px;
    }

    h2 {
        background: #269956;
        color: white;
        font-size: 18px;
        padding: 10px;
        border-top-left-radius: 3px;
        border-top-right-radius: 3px;
        margin-bottom: 0;
    }

    .wrapperd {
        padding: 20px 10% 25px 10%;
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
    }

    .btns {
        text-align: center;
        margin-left: 13%;
        padding-top: 10px;
    }

    .ml {
        padding-left: 30%;
        font-weight: bold;
    }

    .btn-success {
        width: 78px;
        margin-right: 16px;
        background: #269956;
    }

    label {
        width: 30%;
    }

    .input_text,
    select,
    textarea {
        width: 65%;
        border: 1px solid #dee2e6;
        border-radius: 3px;
        color: #4c4747;
    }

    span {
        color: red;
    }

    .input_text {
        height: 30px;
    }

    .barcode {
        display: inline;
    }

    .vt {
        vertical-align: top;
    }

    tex
    .select {
        height: 30px;
    }

    .btns {
        text-align: center;
        margin-left: 13%;
    }

    .mb {
        padding-bottom: 10px;
    }

    textarea {
        height: 60px;
    }
</style>

<div class="content-wrapper">
    <div class="form">
            @using (Html.BeginForm())
            {@Html.AntiForgeryToken()
            <form class="needs-validation border rounded m-0 m-auto" novalidate>
                <h2>Shop Edit</h2>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-row m-2 mt">
                    <label class="control-label col-md-4">Shop Name<span>*</span></label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row m-2">
                    <label class="control-label col-md-4">Shop Type<span>*</span></label>
                    <div class="col-md-6">
                        @*@Html.DropDownList("ShopTypeList", (IEnumerable<SelectListItem>)ViewBag.ShopTypeList, "Select one", new { @class = "form-control" })*@
                        @Html.DropDownList("ShopTypeList", (IEnumerable<SelectListItem>)ViewBag.ShopTypeList as SelectList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.shop_type, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row m-2">
                    <label class="control-label col-md-4">Address<span>*</span></label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = " form-control" } })
                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row m-2">
                    <label class="control-label col-md-4" for="phone_number_1">Primary Phone</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.phone_number_1, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.phone_number_1, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-row m-2">
                    <label class="control-label col-md-4" for="phone_number_2">Secondary Phone</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.phone_number_2, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.phone_number_2, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="form-row m-2 mb-2 justify-content-center">
                    <div class="col-md-12 bg-light p-3 border rounded">
                        <input type="submit" value="Submit" class="btn btn-success justify-content-center" id="btn_center" />
                        <a href="/Shop/Index" class="btn btn-success col-md-1" id="back">Back</a>
                    </div>
                </div>*@
                <div class="form-group btns mb">
                <input type="submit" value="Submit" class="btn btn-success" />
                <a class="btn btn-success create" href="@Url.Action("Index", new { ID = 0, name = string.Empty })">
                    Back
                </a>
                </div>
            </form>}

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
    </div>
</div>
